<assembly>
	<id>src</id>
	<formats>
		<format>tar.gz</format>
		<format>zip</format>
	</formats>
	<baseDirectory>openanzo-${project.version}</baseDirectory>
	<includeBaseDirectory>true</includeBaseDirectory>
	<tarLongFileMode>gnu</tarLongFileMode>
	<fileSets>
		<fileSet>
			<useStrictFiltering>true</useStrictFiltering>
			<directory>src/release/</directory>
			<includes>
				<include>*.txt</include>
			</includes>
			<outputDirectory>/</outputDirectory>
		</fileSet>
		<fileSet>
			<useStrictFiltering>true</useStrictFiltering>
			<directory>..</directory>
			<includes>
				<include>build.*</include>
				<include>BUILD.txt</include>
				<include>LICENSE.txt</include>
				<include>NOTICE.txt</include>
				<include>VERSION.txt</include>
			</includes>
			<outputDirectory>/</outputDirectory>
		</fileSet>
		
		<!--
			Unfortunately, dependencySets don't have a nice 'sources' element like moduleSets.
			So we create the source package by referencing each project in a fileSet here.
		 -->
		<fileSet>
			<useStrictFiltering>true</useStrictFiltering>
			<directory>../../openanzo-client</directory>
			<excludes>
				<exclude>target/**</exclude>
				<exclude>bin/**</exclude>
			</excludes>
			<outputDirectory>openanzo-client</outputDirectory>
		</fileSet>
		<fileSet>
			<useStrictFiltering>true</useStrictFiltering>
			<directory>../../openanzo-common</directory>
			<excludes>
				<exclude>target/**</exclude>
