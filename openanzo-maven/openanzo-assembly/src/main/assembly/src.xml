			</excludes>
			<outputDirectory>openanzo-core</outputDirectory>
		</fileSet>
		<fileSet>
			<useStrictFiltering>true</useStrictFiltering>
			<directory>../../openanzo-glitter</directory>
			<excludes>
				<exclude>target/**</exclude>
				<exclude>bin/**</exclude>
			</excludes>
			<outputDirectory>openanzo-glitter</outputDirectory>
		</fileSet>
		<fileSet>
			<useStrictFiltering>true</useStrictFiltering>
