<propertyDefinitions>
	<propertiesGroup packageName="org.openanzo.servlet" groupPrefix="org.openanzo.servlet" className="Servlet">
		<description>Base configuration properties that are used by servlets.</description>
		<property name="pathSpec" key="KEY_PATH_SPEC" passDefault="false" type="String">
			<description>PathSpec</description>
		</property>
		<property name="protectedPathSpec" key="KEY_PROTECTED_PATH_SPEC" passDefault="false" type="String">
			<description>Protected PathSpec</description>
		</property>
		<property name="contextPath" key="KEY_CONTEXT_PATH" passDefault="false" type="String">
			<description>PathSpec</description>
		</property>
		<property name="docRoot" key="KEY_DOC_ROOT" passDefault="false" type="String">
			<description>Doc root</description>
		</property>
		<property name="authorizationType" key="KEY_AUTH_TYPE" passDefault="false" type="String">
			<description>Auth type.</description>
		</property>
        <property name="securityConstraint" key="KEY_SECURITY_CONSTRAINT" passDefault="false" type="String">
            <description>Security Constraint</description>
        </property>
		<property name="loginPage" key="KEY_LOGIN_PAGE" passDefault="false" type="String">
			<description>login page url</description>
		</property>
		<property name="errorPage" key="KEY_ERROR_PAGE" passDefault="false" type="String">
			<description>error page url</description>
		</property>
		<property name="customTokenRefreshEnabled" key="KEY_CUSTOME_TOKEN_REFRESH" passDefault="false" defaultValue="false" type="Boolean">
			<description>Doc root</description>
		</property>
		<property name="gzipOutput" key="KEY_GZIP_OUTPUT" passDefault="false" defaultValue="true" type="Boolean">
			<description>GZIP output</description>
		</property>
		<property name="authTokenTimeout" key="KEY_AUTH_TOKEN_TIMEOUT" passDefault="false" type="Integer" min="0" max="65536">
			<description>Auth token timeout</description>
		</property>
		<property name="authTokenRefreshWindow" key="KEY_AUTH_TOKEN_REFRESH_WINDOW" passDefault="false" type="Integer" min="0" max="65536">
			<description>Auth token refresh window</description>
		</property>
		<property name="servletClass" key="KEY_SERVLET_CLASS" passDefault="false" type="String">
			<description>Servlet ClassName</description>
		</property>
	</propertiesGroup>
</propertyDefinitions>