<propertyDefinitions>
	<propertiesGroup packageName="org.openanzo.security.ldap" groupPrefix="org.openanzo.security.ldap" className="LDAPAuth">
		<description>Base configuration properties that are used by ldap authentication provider.</description>
		<property name="userBaseDN" key="KEY_USER_BASE_DN" passDefault="false" type="String">
			<description>BaseDN for User search.</description>
		</property>

		<property name="roleBaseDN" key="KEY_ROLE_BASE_DN" passDefault="false" type="String">
			<description>BaseDN for Role search.</description>
		</property>

		<property name="dnToUriTemplate" key="KEY_DN_TO_URI" passDefault="false" type="String">
			<description>Template for converting dn to URI.</description>
		</property>

		<property name="rolesSearch" key="KEY_ROLE_SEARCH" passDefault="false" type="String">
			<description>Roles search template.</description>
		</property>
		
		<property name="roleObjectClass" key="KEY_ROLE_OBJECT_CLASS" passDefault="false" type="String">
			<description>Role class.</description>
		</property>
		
		<property name="userObjectClass" key="KEY_USER_OBJECT_CLASS" passDefault="false" type="String">
			<description>User class.</description>
		</property>
        
        <property name="roleSearchFilter" key="KEY_ROLE_SEARCH_FILTER" passDefault="false" type="String">
            <description>Ldap filter to filter user search results eg objectClass=group</description>
        </property>
        
        <property name="userSearchFilter" key="KEY_USER_SEARCH_FILTER" passDefault="false" type="String">
            <description>Ldap filter to filter user search results eg objectClass=person</description>
        </property>
        
		<property name="userSearch" key="KEY_USER_SEARCH" passDefault="false" type="String">
			<description>Users search template.</description>
		</property>

		<property name="userIdAttribute" key="KEY_USER_ID" passDefault="false" type="String">
			<description>User ID attribute.</description>
		</property>

		<property name="sysadminRole" key="KEY_SYSADMIN" passDefault="false" type="String">
			<description>Sysadmin Role.</description>
		</property>
		<property name="useEmbeddedServer" key="KEY_USE_EMBEDDED" passDefault="false" defaultValue="true" type="Boolean">
			<description>Connect to embedded server.</description>
		</property>
		<property name="anonymousAccessEnabled" key="KEY_ANONYMOUS_ACCESS_ENABLED" passDefault="false" defaultValue="false" type="Boolean"> 
			<description>Anonymous access enabled.</description> 
		</property> 
	</propertiesGroup>
</propertyDefinitions>