<?xml version="1.0" encoding="UTF-8"?>
<project>
	<modelVersion>4.0.0</modelVersion>
	<packaging>jar</packaging>
	<parent>
		<artifactId>openanzo-parent</artifactId>
		<groupId>org.openanzo</groupId>
		<version>3.2.0</version>
		<relativePath>../openanzo-maven/pom.xml</relativePath>
	</parent>
	<groupId>org.openanzo</groupId>
	<artifactId>org.openanzo.execution.javascript</artifactId>
	<name>${project.artifactId}</name>
	  <description>Executor for JavaScript based semantic services.</description>
  	<url>http://www.openanzo.org/openanzo/${project.artifactId}</url>
	<organization>
		<name>Cambridge Semantics Inc.</name>
		<url>http://www.cambridgesemantics.com</url>
	</organization>
	<inceptionYear>2007</inceptionYear>
	<licenses>
		<license>
			<name>Eclipse Public License v1.0</name>
			<url>http://www.eclipse.org/legal/epl-v10.html</url>
			<distribution>repo</distribution>
		</license>
	</licenses>
	<dependencies>
	<dependency>
			<groupId>org.openanzo</groupId>
			<artifactId>org.openanzo.services</artifactId>
			<version>${project.version}</version>
		</dependency>
		<dependency>
			<groupId>org.openanzo</groupId>
			<artifactId>org.openanzo.execution</artifactId>
			<version>${project.version}</version>
		</dependency>
		<dependency>
			<groupId>org.openanzo</groupId>
			<artifactId>org.openanzo.client</artifactId>
			<version>${project.version}</version>
		</dependency>
		<dependency>
			<groupId>org.openanzo</groupId>
			<artifactId>org.openanzo.client.pool</artifactId>
			<version>${project.version}</version>
		</dependency>
		<dependency>
			<groupId>org.openanzo</groupId>
			<artifactId>org.openanzo.osgi.configuration</artifactId>
			<version>${project.version}</version>
		</dependency>
		<dependency>
			<groupId>org.openanzo</groupId>
			<artifactId>org.openanzo.osgi.registry</artifactId>
			<version>${project.version}</version>
		</dependency>
		<dependency>
			<groupId>org.openanzo.dependencies</groupId>
			<artifactId>org.apache.xmlbeans</artifactId>
		</dependency>
		<dependency>
			<groupId>org.openanzo.dependencies</groupId>
			<artifactId>org.mozilla.rhino</artifactId>
		</dependency>
		<dependency>
			<groupId>org.openanzo.dependencies</groupId>
			<artifactId>net.sf.saxon</artifactId>
		</dependency>
		<dependency>
			<groupId>org.apache.geronimo.specs</groupId>
			<artifactId>geronimo-activation_1.1_spec</artifactId>
		</dependency>
	</dependencies>
	<build>
		<resources>
			<resource>
				<directory>src/main/resources</directory>
			</resource>
		</resources>
		<plugins>
			<plugin>
				<artifactId>maven-clean-plugin</artifactId>
				<configuration>
					<filesets>
						<fileset>
							<directory>${gensrc.target}/META-INF</directory>
							<includes>
								<include>**/MANIFEST.MF</include>
							</includes>
							<followSymlinks>false</followSymlinks>
						</fileset>
					</filesets>
				</configuration>
			</plugin>
			<plugin>
				<artifactId>maven-jar-plugin</artifactId>
				<configuration>
					<archive>
						<manifestFile>${gensrc.target}/META-INF/MANIFEST.MF</manifestFile>
					</archive>
				</configuration>
			</plugin>
			<plugin>
				<groupId>org.apache.felix</groupId>
				<artifactId>maven-bundle-plugin</artifactId>
				<executions>
					<execution>
						<id>bundle-manifest</id>
						<phase>process-classes</phase>
						<goals>
							<goal>manifest</goal>
						</goals>
					</execution>
				</executions>
				<configuration>
					<manifestLocation>${gensrc.target}/META-INF</manifestLocation>
					<instructions>
						<_nouses>true</_nouses>
						<Bundle-Name>Anzo Semantic Service JavaScript Executor</Bundle-Name>
                        <Bundle-SymbolicName>${project.artifactId}</Bundle-SymbolicName>
						<Bundle-Version>${openanzo.version}</Bundle-Version>
						<Bundle-Activator>${project.artifactId}.JavascriptExecutorActivator</Bundle-Activator>
						<Import-Package>
                            *,
                            org.openanzo.client;version=${project.version},
                            org.openanzo.client.pool;version=${project.version},
                            org.openanzo.osgi;version=${project.version},
                            org.openanzo.osgi.registry;version=${project.version},
                            org.openanzo.services;version=${project.version},
                            org.osgi.framework,
                            org.osgi.service.cm,
                            org.slf4j;version="1.4",
                            org.mozillax.javascript.*;version="1.2.2",
                            org.osgi.service.metatype;version="1.1.0",
                            org.openanzo.*;version=${project.version},
                            org.openanzo.rdf.jastor;version=${project.version},
						</Import-Package>
						<Configuration-Properties>${bundle.resources}config/</Configuration-Properties>
					</instructions>
				</configuration>
			</plugin>
		</plugins>
	</build>
</project>