package org.openanzo.jdbc.query;

/**
 * Set of constants used in Glitter's RDB queries
 * 
 * @author Matthew Roy ( <a href="mailto:mroy@cambridgesemantics.com">mroy@cambridgesemantics.com </a>)
 * 
 */
public final class SQLQueryConstants {

    /** Constant for FAKE Table used to ensure non empty result sets for queries with no variables */
    public static final String  glitterUnitTable           = "GLITTERUNIT";

    /** Constant for FAKE table's column */
    private static final String glitterUnitTableColumn     = "FAKE";

    /** Constant for full FAKE table's column name */
    public static final String  glitterUnitTableColumnFull = glitterUnitTable + "." + glitterUnitTableColumn;

    /** Constant for the fake variable */
    public static final String  glitterIgnoredVariable     = "fakeVAR";

    /** Name of the temporary table where valid default graph ids are placed */
    public static final String  defaultGraphsTempTable     = "DEFAULTGRAPHS_TMP";

    /** Name of the temporary table where valid named graph ids are placed */
    public static final String  namedGraphsTempTable       = "NAMEDGRAPHS_TMP";

    /** Name of the temporary table where graph ids are placed */
    public static final String  tempGraphsTempTable        = "TEMPGRAPHS";
}
