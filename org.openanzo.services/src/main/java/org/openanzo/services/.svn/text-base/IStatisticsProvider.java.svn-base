package org.openanzo.services;


/**
 * @author Matthew Roy ( <a href="mailto:mroy@cambridgesemantics.com">mroy@cambridgesemantics.com</a>)
 * 
 */
public interface IStatisticsProvider {
    /**
     * Get the StatisticsObject for this component
     * 
     * @return Statistics Object for this component
     */
    public abstract DynamicServiceStats getStatistics();

    /**
     * Get the unique name for this stats provider
     * 
     * @return Name for the stats provider
     */
    public abstract String getName();

    /**
     * Get the description of this IStatisticsProvider
     * 
     * @return Description for the stats provider
     */
    public abstract String getDescription();
}
